{
  "name": "germes-lk",
  "version": "1.0.0",
  "description": "Личный кабинет для управления сотрудниками и отслеживания посещений",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "cd client && npm run build",
    "install-client": "cd client && npm install",
    "heroku-postbuild": "npm run install-client && npm run build",
    "init-db": "node scripts/init-db.js",
    "backup": "node scripts/backup.js",
    "backup:create": "node scripts/backup.js create",
    "backup:cleanup": "node scripts/backup.js cleanup",
    "backup:info": "node scripts/backup.js info",
    "backup:schedule": "node scripts/backup.js schedule"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "sequelize": "^6.35.0",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "multer": "^1.4.5-lts.1",
    "qrcode": "^1.5.3",
    "uuid": "^9.0.1",
    "dotenv": "^16.3.1",
    "compression": "^1.7.4",
    "express-session": "^1.17.3",
    "connect-pg-simple": "^9.0.1",
    "node-cron": "^3.0.3"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
